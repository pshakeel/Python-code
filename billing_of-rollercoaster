print("WELCOME TOI ROLLERCOASTER!")
height=int(input("What is your height in cm ? "))

if height >=120:
    print("you can ride rollercoaster")
    age=int(input("enter your age:-"))
    if age<=12:
        bill=5
        print("child tickets are 5$")
    elif age<=18:
        bill=7
        print("youth tickets are 7$")
    else:
        bill=12
        print("adult tickets are 12$")

    photo=input("you want photo taken? enter Y or N.")
    if photo=="Y":
        total_bill=bill+3
        print(f"your total bill should be {total_bill}$")
    else:
        print(f"your total bill should be {bill}$")
else:
    print("you have to grew taller after you can ride")
